<UserControl x:Class="SAE101Foudre.MenuOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE101Foudre"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/imgFondOptions.png"/>
        </Grid.Background>
        <Label x:Name="labOptions" Content="OPTIONS" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top" FontFamily="Algerian" FontSize="48"/>
        <Button x:Name="butDifficileOptions" Content="DIFFICILE" HorizontalAlignment="Left" Margin="98,187,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.774,1.719" Height="40" Width="120" FontFamily="Algerian" FontSize="16" Background="#FFFD2D2D" Click="butDifficileOptions_Click"/>
        <Button x:Name="butMoyenOptions" Content="MOYEN" HorizontalAlignment="Left" Margin="98,237,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.267,2.66" Height="39" Width="120" FontFamily="Algerian" FontSize="16" Background="#FFFDEB28" Click="butMoyenOptions_Click"/>
        <Button x:Name="butFacileOptions" Content="FACILE" HorizontalAlignment="Left" Margin="98,287,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.027,0.989" Height="40" Width="120" FontFamily="Algerian" FontSize="16" Background="#FF17FF0F" Click="butFacileOptions_Click"/>
        <Label x:Name="labDifficluteOptions" Content="DIFICULTE" HorizontalAlignment="Left" Margin="108,146,0,0" VerticalAlignment="Top" Height="36" Width="100" FontSize="20" FontFamily="Algerian"/>
        <Button x:Name="butRetourOptions" Content="RETOUR" HorizontalAlignment="Center" Margin="0,366,0,0" VerticalAlignment="Top" FontFamily="Algerian" FontSize="18" Height="40" Width="120" Click="butRetourOptions_Click"/>

    </Grid>
</UserControl>
