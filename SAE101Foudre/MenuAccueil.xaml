<UserControl x:Class="SAE101Foudre.MenuAccueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE101Foudre"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600" Background="white" x:Name="UCAccueil">
    <Grid x:Name="GridAcceuil">
        <Grid.Background>
            <ImageBrush ImageSource="/imgFondAcceuil.png"/>
        </Grid.Background>
        <Button x:Name="butJouerAcceuil" Content="JOUER" HorizontalAlignment="Center" Margin="0,450,0,0" VerticalAlignment="Top" Width="280" Height="80" Foreground="White" Background="#FF0082A0" Click="butJouerAcceuil_Click" FontFamily="Algerian" FontSize="24"/>
        <Button x:Name="butOptionsAcceuil" Content="OPTIONS" HorizontalAlignment="Center" Margin="0,550,0,0" VerticalAlignment="Top" Width="280" Height="80" Background="#FF0082A0" Foreground="White" Click="butOptionsAcceuil_Click" FontFamily="Algerian" FontSize="24"/>
        <Button x:Name="butQuitterAcceuil" Content="QUITTER" HorizontalAlignment="Center" Margin="0,650,0,0" VerticalAlignment="Top" Background="#FF0082A0" Foreground="White" Width="280" Height="80" Click="butQuitterAcceuil_Click" FontFamily="Algerian" FontSize="24"/>
        <Image x:Name="imgLogoAcceuil" Margin="448,10,448,506" Source="/Images/imgLogoAcceuil.png" Stretch="Fill" Width="704" Height="384"/>

    </Grid>
</UserControl>
