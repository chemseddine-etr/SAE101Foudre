<UserControl x:Class="SAE101Foudre.MenuAccueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE101Foudre"
             mc:Ignorable="d"
             x:Name="UCAccueil" d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Background>
        <ImageBrush ImageSource="/Images/imgFondAcceuil.png"/>
    </UserControl.Background>
    <Grid x:Name="GridAcceuil">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20" >
            <Image x:Name="imgLogoAcceuil" Source="/Images/imgLogoAcceuil.png" Stretch="Fill" Width="600" Height="500"/>
            <Button x:Name="butJouerAcceuil" Content="JOUER" Width="280" Height="80" Foreground="White" Background="#FF0082A0" Click="butJouerAcceuil_Click" FontFamily="Algerian" FontSize="24" Margin="0,0,0,40"/>
            <Button x:Name="butOptionsAcceuil" Content="OPTIONS" Width="280" Height="80" Background="#FF0082A0" Foreground="White" Click="butOptionsAcceuil_Click" FontFamily="Algerian" FontSize="24" Margin="0,0,0,40"/>
            <Button x:Name="butQuitterAcceuil" Content="QUITTER"  Width="280" Height="80" Background="#FF0082A0" Foreground="White" Click="butQuitterAcceuil_Click" FontFamily="Algerian" FontSize="24" Margin="0,0,0,80"/>
        </StackPanel>
    </Grid>
</UserControl>
