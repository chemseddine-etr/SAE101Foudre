<UserControl x:Class="SAE101Foudre.MenuDifficulte"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE101Foudre"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.Background>
        <ImageBrush ImageSource="/Images/imgFondAcceuil.png"/>
    </UserControl.Background>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="labDifficulte" Content="SELECTIONNEZ UNE DIFFICULTE" FontFamily="Algerian" FontSize="100" Foreground="Wheat" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,150,0,150" HorizontalAlignment="Center">
                <Button x:Name="butFacile" Content="FACILE" Width="300" Height="80" FontFamily="Algerian" FontSize="40" Background="ForestGreen" Margin="0,0,150,0" Click="butFacile_Click"/>
                <Button x:Name="butMoyen" Content="MOYEN" Width="300" Height="80" FontFamily="Algerian" FontSize="40" Background="#FFEFEF23" Margin="0,0,150,0" Click="butMoyen_Click"/>
                <Button x:Name="butDifficile" Content="DIFFICILE" Width="300" Height="80" FontFamily="Algerian" FontSize="40" Background="#FFFF2D2D" Click="butDifficile_Click"/>
            </StackPanel>
            <Button x:Name="butRetourDiff" Content="RETOUR" Background="#FF0082A0" Foreground="White" Width="280" Height="80" FontFamily="Algerian" FontSize="40" Margin="0,0,0,80" Click="butRetourDiff_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
