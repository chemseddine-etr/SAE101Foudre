<UserControl x:Class="SAE101Foudre.Jeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE101Foudre"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" x:Name="UCJeu">
    <UserControl.Background>
        <ImageBrush ImageSource="Images/imgFond.jpeg"/>
    </UserControl.Background>
    <Canvas x:Name="canvasJeu">
        <Image x:Name="imgSol" Canvas.Bottom="-30" Canvas.Left="0" Source="/Images/imgSol.png" >
            <Image.Width>
                <Binding Path="ActualWidth" ElementName="canvasJeu"/>
            </Image.Width>
        </Image>

        <Image x:Name="imgPerso" Canvas.Bottom="100" Canvas.Left="800" Height="125" Source="/Images/imgPerso0.png" />
    </Canvas>
</UserControl>
